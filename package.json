{
    "name": "pawd-api-nest",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "NODE_ENV=dev nest start --watch",
        "start:debug": "NODE_ENV=dev nest start --debug --watch",
        "start:prod": "NODE_ENV=prod node dist/main",
        "start:test": "NODE_ENV=test nest start --watch",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:auth:service": "jest src/components/auth/test/auth.service.spec.ts",
        "test:users:service": "jest src/components/users/test/users.service.spec.ts",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare": "husky install"
    },
    "dependencies": {
        "@google-cloud/storage": "^7.16.0",
        "@nestjs-modules/mailer": "^1.8.1",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.3.2",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^10.0.3",
        "@nestjs/mongoose": "^9.2.2",
        "@nestjs/platform-express": "^9.0.0",
        "@types/nodemailer": "^6.4.8",
        "@types/stripe-v3": "^3.1.29",
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "git-commit-msg-linter": "^4.9.2",
        "handlebars": "^4.7.7",
        "husky": "^8.0.3",
        "mongoose": "^7.0.3",
        "nodemailer": "^6.9.3",
        "qrcode": "^1.5.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0",
        "stripe": "^16.8.0",
        "validate-branch-name": "^1.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^10.2.6",
        "@types/express": "^4.17.13",
        "@types/jest": "29.2.4",
        "@types/node": "18.11.18",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.3.3",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "29.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.1",
        "typescript": "^4.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx validate-branch-name"
        }
    },
    "validate-branch-name": {
        "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release|test)/.+$",
        "errorMsg": "your own error message"
    }
}
